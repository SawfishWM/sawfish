(structure ()

    (open rep
	  rep.system
	  rep.io.files
	  rep.regexp)

  (when (getenv "SAWFISH_USER_LISP_DIR")
    (setq load-path
	  (append
	   (mapcar canonical-file-name
		   (string-split ":" (getenv "SAWFISH_USER_LISP_DIR")))
	   load-path)))

  ;; This is put here *after* SAWFISH_USER_LISP_DIR is parsed.
  (require 'sawfish.cfg.shell)

  (run-shell))


