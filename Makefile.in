include ./Makedefs

top_builddir=.
top_srcdir=@top_srcdir@

SUBDIRS = src lisp man

all : build.h DOC.dir
	set -e; for dir in $(SUBDIRS); do \
	  [ -d $$dir ] && ( cd $$dir && $(MAKE) $@ ); \
 	done

# this depends on config.status so it's rebuilt if configure is re-run
build.h : build-info config.status
	$(SHELL) $< $(host_type) $(version) $(version_major) $(version_minor) \
	  '$(sawmilldir)' '$(lispdir)' '$(sawmillexecdir)'

install : all installdirs
	set -e; for dir in $(SUBDIRS); do \
	  ( cd $$dir && $(MAKE) $@ ); \
	done
	$(INSTALL_PROG) sawmill-ui $(bindir)
	$(INSTALL_DATA) ./DOC.* $(sawmilldir)/$(version)
	for d in images/*; do \
	  mkdir $(sawmilldir)/images/$d \
	  for f in $$d/*; do \
	    $(INSTALL_DATA) $$f $(sawmilldir)/$$f; \
	  done \
	done

installdirs : $(top_srcdir)/mkinstalldirs
	$(SHELL) $(top_srcdir)/mkinstalldirs $(sawmilldir)/$(version) \
	  $(bindir) $(sawmilldir)/images

uninstall :
	set -e; for dir in $(SUBDIRS); do \
	  ( cd $$dir && $(MAKE) $@ ); \
	done
	rm -f $(bindir)/sawmill-ui
	rm -rf $(sawmilldir)/$(version)
	for d in images/*; do \
	  for f in $$d/*; do \
	    rm -f $(sawmilldir)/$$f; \
	  done \
	  rmdir $(sawmilldir)/images/$$d \
	done

DOC.dir :
	repdoc DOC `find . -name '*.c' -print`

NEWS : man/news.texi
	(cd man && $(MAKE) ../NEWS )

clean :
	-set -e; for dir in $(SUBDIRS); do \
	  [ -d $$dir ] && ( cd $$dir && $(MAKE) $@ ); \
	done
	rm -f *~ NEWS DOC.* TAGS build.h

realclean :
	-set -e; for dir in $(SUBDIRS); do \
	  [ -d $$dir ] && ( cd $$dir && $(MAKE) $@ ); \
	done
	rm -f config.cache config.h config.log config.status Makedefs Makefile
	rm -f *~ NEWS DOC.* TAGS build.h libtool

TAGS :
	etags --language=c `find . -name '*.[ch]' -print` \
	      --language=lisp `find . -name '*.jl' -print`

.PHONY: install uninstall tar nobak clean realclean TAGS
