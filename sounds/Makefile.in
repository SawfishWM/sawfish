include ../Makedefs

top_builddir=..
top_srcdir=@top_srcdir@
srcdir=@srcdir@
VPATH=@srcdir@:@top_srcdir@

sitesoundsdir := ${sawfishdir}/sounds
soundsdir := ${sawfishdir}/${version}/sounds

all :

install : all installdirs
	for f in $(srcdir)/*.wav; do \
	  $(INSTALL_DATA) $$f $(DESTDIR)$(soundsdir); \
	done

installdirs : mkinstalldirs
	$(SHELL) $< $(DESTDIR)$(soundsdir) $(DESTDIR)$(sitesoundsdir)

uninstall :
	rm -rf $(DESTDIR)$(soundsdir)

clean :
	rm -f *~ core

distclean : gitclean

gitlean : clean
	rm -f Makefile

.PHONY : all install uninstall clean gitclean
